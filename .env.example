# === DATABASE CONFIGURATION ===
# Production Neon Database (required)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
NEON_NEON_DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
NEON_DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# === AUTHENTICATION ===
# NextAuth configuration (required)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-secret-key-min-32-characters"

# === OPTIONAL: SEED ADMIN USER ===
# Only used for initial setup with seed-prod script
SEED_ADMIN_EMAIL="admin@example.com"
SEED_ADMIN_NAME="Admin User"
SEED_ADMIN_PASSWORD="your-secure-password"

# === OPTIONAL: UPSTASH REDIS ===
# For rate limiting (recommended for production)
UPSTASH_KV_REST_API_URL="https://your-redis-url.upstash.io"
UPSTASH_KV_REST_API_TOKEN="your-upstash-token"

# === NODE ENVIRONMENT ===
NODE_ENV="production"
PORT="3000"
